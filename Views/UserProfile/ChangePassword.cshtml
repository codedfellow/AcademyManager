@model AcademyManager.ViewModels.ChangePasswordVM

@{
    ViewData["Title"] = "ChangePassword";
}
    <div class="col-md-6" style="margin: 5px auto;">
        <div class="card card-warning">
            <div class="card-header">
                <h1 class="card-title">Change Password</h1>
            </div>            
                    <form asp-action="ChangePassword">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Id" type="hidden" class="form-control" />
                            <div class="form-group">
                                <label asp-for="CurrentPassword" class="control-label"></label>
                                <input asp-for="CurrentPassword" class="form-control" />
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NewPassword" class="control-label"></label>
                                <input asp-for="NewPassword" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfiremNewPassword" class="control-label"></label>
                                <input asp-for="ConfiremNewPassword" class="form-control" />
                                <span asp-validation-for="ConfiremNewPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn text-white btn-danger" 
                                       onclick="return confirm('Are you sure you want to change your password')" />
                            </div>
                        </div>
                    </form>
            <div class="card-footer">
                <a class="btn bg-gradient-indigo" asp-action="Index">Back to Profile Page</a>
            </div>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
