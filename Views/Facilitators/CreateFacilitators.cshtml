@model List<FacilitatorsVM>;

@{
    ViewData["Title"] = "CreateFacilitators";
}
    <div class="container-fluid">
        <h1>Create Facilitators</h1>
        @if (Model.Count > 0)
        {
            <form method="post" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <table class="table table-striped">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td class="col">
                                    <input asp-for="@Model[i].Id" type="hidden" />@Model[i].FirstName @Model[i].LastName @Model[i].MiddleName
                                    <input asp-for="@Model[i].FirstName" type="hidden" />
                                    <input asp-for="@Model[i].MiddleName" type="hidden" />
                                    <input asp-for="@Model[i].LastName" type="hidden" />
                                    <input asp-for="@Model[i].PhoneNumber" type="hidden" />
                                </td>
                                <td class="col">
                                    <input asp-for="@Model[i].IsSelected" />
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <input type="submit" class="btn btn-info" onclick="return confirm('Are you sure of the selected users?')"
                       value="Submit Selected Users As Facilitators" />
            </form>
        }
        else
        {
            <h2 class="text-danger">There are no users to select as facilitators</h2>
        }
    </div>
