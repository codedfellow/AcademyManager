@model List<CourseVM>

@{
    ViewData["Title"] = "FacilitatorCourses";
}

    <div class="container-fluid">
        @if (Model.Count > 0)
        {
            <h1>Facilitator Courses</h1>
            <div class="card">

                <div class="card">
                    <div class="card-body">
                        <table id="tblList" class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Course Name
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CourseName)
                                        </td>
                                        <td>
                                            <a class="btn btn-secondary" asp-action="AddTestOrExam" asp-route-id="@item.Id">Add Test or Exam</a>
                                            <a class="btn btn-secondary" asp-action="ViewCourseDetails" asp-route-courseId="@item.Id">View Course Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h3 class="text-warning">No courses currently assigned to you</h3>
        }
    </div>

