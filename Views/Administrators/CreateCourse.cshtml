@model AcademyManager.ViewModels.CreateCourseVM

@{
    ViewData["Title"] = "CreateCourse";
}
    <div class="container-fluid">
        <h1>Create Course</h1>

        <div class="col-md-6" style="margin: 5px auto;">
            <div class="card card-primary">
                <div class="card-body">
                    <form asp-action="CreateCourse">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CourseName" class="control-label"></label>
                            <input asp-for="CourseName" class="form-control" />
                            <span asp-validation-for="CourseName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <a class="btn bg-gradient-indigo" asp-controller="AdminPortal" asp-action="Index">Back to Admin Portal</a>
                </div>
            </div>
        </div>
    </div>
